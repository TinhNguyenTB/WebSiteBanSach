
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Layout/UserLayout.cshtml";
}

<div class="container pb-5">

    <h3 class="text-center my-3">Đăng nhập</h3>

    @using (Html.BeginForm())
    {
        <div class="d-flex flex-column justify-content-center align-items-center my-3">
            <div>
                <div class="mb-2">
                    <label class="mb-1">Tài khoản:</label>
                    <input class="form-control" type="text" name="txtTaiKhoan" placeholder="Nhập tài khoản" /><br />
                </div>
                <div class="mb-2">
                    <label class="mb-1">Mật khẩu:</label>
                    <input class="form-control" type="password" name="txtMatKhau" placeholder="Nhập mật khẩu" /><br />
                </div>
                <input type="submit" class="w-100 btn btn-success" value="Đăng nhập" />
            </div>
        </div>
    }
    <h5 class="text-center text-danger">@ViewBag.message</h5>
    <div class="d-flex justify-content-center align-items-center gap-2">
        <b class="">Chưa có tài khoản?</b>
        <a href="@Url.Action("DangKy")" class="text-decoration-none text-success fw-bold">
            Đăng ký ngay
        </a>
    </div>
    
</div>




